<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boardgamecollector">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kosc"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kosc"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoardGameCollector">
        <activity android:name=".IntroAnimation" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RankingActivity"
            android:parentActivityName=".GameListActivity"
            android:exported="false" />
        <activity
            android:name=".ExtensionActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SynchronizationActivity"
            android:exported="false" />
        <activity
            android:name=".GameListActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
    </application>

</manifest>